<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="7dp"
    android:elevation="7dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:id="@+id/rl">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/battle1"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/battle1_name"
            android:textSize="14sp"
            android:layout_toEndOf="@+id/battle1"
            android:layout_marginStart="5dp"
            android:maxLines="1"
            android:maxLength="11"
            android:ellipsize="end"
            android:textColor="@color/colorPrimary" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/battle1_first_name"
            android:textSize="14sp"
            android:layout_toEndOf="@+id/battle1"
            android:layout_below="@+id/battle1_name"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:maxLines="1"
            android:maxLength="11"
            android:ellipsize="end"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V"
            android:layout_centerInParent="true"
            android:textSize="14sp"
            android:layout_marginStart="10dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/battle2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/battle2_name"
            android:textSize="14sp"
            android:layout_toStartOf="@+id/battle2"
            android:layout_marginEnd="5dp"
            android:maxLines="1"
            android:maxLength="11"
            android:ellipsize="end"
            android:textColor="@color/colorPrimary" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/battle2_first_name"
            android:textSize="14sp"
            android:layout_toStartOf="@+id/battle2"
            android:layout_below="@+id/battle2_name"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:maxLines="1"
            android:maxLength="11"
            android:ellipsize="end"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/result"
            android:layout_below="@+id/battle1"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:maxLines="1"
            android:maxLength="11"
            android:ellipsize="end"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>